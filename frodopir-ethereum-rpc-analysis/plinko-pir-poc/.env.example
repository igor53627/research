# Plinko PIR + Plinko PoC Environment Variables

# =============================================================================
# SERVICE ADDRESSING CONFIGURATION
# =============================================================================

# External Access URLs (from host machine/browser)
# These are used by the Ambire wallet frontend running in the browser
VITE_PIR_SERVER_URL=http://localhost:3000
VITE_CDN_URL=http://localhost:8080
VITE_FALLBACK_RPC=https://eth.llamarpc.com

# Alternative: Custom local domains (requires /etc/hosts configuration)
# VITE_PIR_SERVER_URL=http://plinko-server.local:3000
# VITE_CDN_URL=http://plinko-cdn.local:8080

# Network Ports (External Access)
PIR_SERVER_PORT=3000               # Plinko PIR query server
PLINKO_UPDATE_PORT=3001            # Plinko update service
CDN_PORT=8080                      # CDN mock
WALLET_PORT=5173                   # Ambire wallet
ETH_RPC_PORT=8545                  # Ethereum mock (internal only, not exposed)

# Docker Internal Service Addresses (container-to-container communication)
# These are used by backend services communicating within Docker network
DOCKER_ETH_MOCK_URL=http://eth-mock:8545
DOCKER_PIR_SERVER_URL=http://plinko-pir-server:3000
DOCKER_CDN_URL=http://cdn-mock:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_SIZE=8388608              # 2^23 accounts (Ethereum Warm Tier)
ENTRY_SIZE=8                       # 8 bytes per account (balance only)

# =============================================================================
# PLINKO PIR PARAMETERS
# =============================================================================

PLINKO_CHUNK_SIZE=2896              # sqrt(8.4M) â‰ˆ 2,896
PLINKO_SET_SIZE=1024                # From Plinko paper benchmarks

# =============================================================================
# PLINKO CACHE CONFIGURATION
# =============================================================================

PLINKO_CACHE_ENABLED=true          # Enable 79x speedup
PLINKO_CACHE_SIZE_MB=64            # Pre-computed hint mappings

# =============================================================================
# PERFORMANCE TARGETS
# =============================================================================

QUERY_LATENCY_TARGET_MS=10         # Plinko PIR query target
UPDATE_LATENCY_TARGET_US=100       # Plinko update target (100 accounts)
HINT_SIZE_TARGET_MB=70             # Expected hint size

# =============================================================================
# ETHEREUM MOCK CONFIGURATION
# =============================================================================

ANVIL_BLOCK_TIME=12                # 12-second blocks (mainnet simulation)
ANVIL_BALANCE=1000000000000000000000  # 1000 ETH in wei

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

DEBUG=false
LOG_LEVEL=info
ENABLE_PROFILING=false

# =============================================================================
# CUSTOM DOMAIN SETUP (OPTIONAL)
# =============================================================================
# To use custom local domains instead of localhost:
#
# 1. Add entries to your /etc/hosts file:
#    sudo nano /etc/hosts
#
#    Add these lines:
#    127.0.0.1  plinko-server.local
#    127.0.0.1  plinko-cdn.local
#    127.0.0.1  plinko-wallet.local
#
# 2. Update VITE_* URLs above to use custom domains
#
# 3. Restart Docker Compose:
#    docker-compose down && docker-compose up -d
#
# 4. Access wallet at: http://plinko-wallet.local:5173
# =============================================================================
